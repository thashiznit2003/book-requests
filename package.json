{
  "name": "book-requests",
  "private": true,
  "workspaces": [
    "server",
    "client"
  ],
  "scripts": {
    "dev": "concurrently -k \"npm:dev --workspace server\" \"npm:dev --workspace client\"",
    "build": "npm run build --workspace client && npm run build --workspace server",
    "start": "npm run start --workspace server"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
